<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "conn.bean.Product" table = "product">
      
      <id name = "productId" type = "int" column = "ProductId">
         <generator class="sequence">
        
         </generator>
      </id>
      
      <property name = "productName" column = "ProductName" type = "string"></property>
      <property name = "price" column = "Price" type = "int"></property>
      
      
   </class>
</hibernate-mapping>