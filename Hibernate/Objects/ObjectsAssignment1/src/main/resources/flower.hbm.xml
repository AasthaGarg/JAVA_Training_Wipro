<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "conn.bean.Flower" table = "flower">
      
      <id name = "id" type = "string" column = "flowerid">
         <generator class="assigned"></generator>
      </id>
      
      <property name = "name" column = "flowername" type = "string"></property>
      <property name = "color" column = "color" type = "string"></property>
      <property name = "price" column = "price" type = "int"></property>
      
   </class>
</hibernate-mapping>